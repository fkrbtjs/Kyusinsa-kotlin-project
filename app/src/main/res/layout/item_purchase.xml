<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/pur_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="0000.00.00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/pur_picture"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pur_date"
        app:srcCompat="@drawable/bottom10" />

    <TextView
        android:id="@+id/pur_storeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="토피"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/pur_picture"
        app:layout_constraintTop_toTopOf="@+id/pur_picture" />

    <TextView
        android:id="@+id/pur_iteminfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="밴딩 슬랙스"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pur_storeName"
        app:layout_constraintTop_toBottomOf="@+id/pur_storeName" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="수량 : 1개"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/pur_price"
        app:layout_constraintStart_toStartOf="@+id/pur_iteminfo" />

    <TextView
        android:id="@+id/pur_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5,9000원"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pur_picture"
        app:layout_constraintStart_toStartOf="@+id/pur_storeName" />
</androidx.constraintlayout.widget.ConstraintLayout>